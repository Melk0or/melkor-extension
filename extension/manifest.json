{
  "manifest_version": 3,
  "name": "Easy Block",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": ["declarativeNetRequest", "alarms"],
  "web_accessible_resources": [
    {
      "resources": ["lottie/cat.gif"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/app/background.ts",
    "type": "module"
  }
}
